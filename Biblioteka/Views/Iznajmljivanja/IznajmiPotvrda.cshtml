@model Biblioteka.Models.Iznajmljivanje

@{
    ViewData["Title"] = $"{Model.Primerak.Knjiga.Naziv} ({Model.Primerak.Knjiga.Izdanje}. izdanje) br. {Model.PrimerakId} - Iznajmljivanje";
}

<h1>Iznajmljivanje</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IznajmljivanjePotvrdi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Korisnik" class="control-label font-weight-bold"></label>
                @Model.Korisnik.Ime @Model.Korisnik.Prezime
            </div>
            <div class="form-group">
                <label asp-for="Primerak.Knjiga.Naziv" class="control-label font-weight-bold"></label>
                @Model.Primerak.Knjiga.Naziv (@Model.Primerak.Knjiga.Izdanje. izdanje)
            </div>
            <div class="form-group">
                <label asp-for="PrimerakId" class="control-label font-weight-bold"></label>
                @Model.PrimerakId
            </div>
            <div class="form-group">
                <label asp-for="RokVracanja" class="control-label font-weight-bold"></label>
                @Model.RokVracanja.ToString("dd.MM.yyyy.")
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
            <input asp-for="KorisnikId" class="form-control" type="hidden" />
            <input asp-for="PrimerakId" class="form-control" type="hidden" />
            <input asp-for="RokVracanja" class="form-control" type="hidden" />
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Lista">Prikaži sve</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
