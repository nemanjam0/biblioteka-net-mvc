@model Biblioteka.ViewModels.PrimerakKnjigeVM

@{
    ViewData["Title"] = "Primerak knjige - Kreiranje";
}

<h1>Kreiraj</h1>

<h4>Primerak knjige</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KreirajPrimerak">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PrimerakKnjige.Knjiga.Naziv" class="control-label"></label>
                @Html.DropDownListFor(m => m.PrimerakKnjige.KnjigaId, Model.Knjige, "Odaberi knjigu", new { @id = "KnjigeSelect" })
                <span asp-validation-for="Knjige" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimerakKnjige.VremeNabavke" class="control-label"></label>
                <input asp-for="PrimerakKnjige.VremeNabavke" class="form-control" />
                <span asp-validation-for="PrimerakKnjige.VremeNabavke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojPrimerakaZaDodavanje" class="control-label"></label>
                <input asp-for="BrojPrimerakaZaDodavanje" class="form-control" />
                <span asp-validation-for="BrojPrimerakaZaDodavanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Lista">Prikaži sve</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ <script>$('#KnjigeSelect').select2();</script>}
}
