@model Biblioteka.Models.Autor
@using Biblioteka.Enums
@{
    ViewData["Title"] = $"{Model.Ime} ${Model.Prezime} - Izmena";
}

<h1>Izmeni</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Izmeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AutorId" />
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SrednjeIme" class="control-label"></label>
                <input asp-for="SrednjeIme" class="form-control" />
                <span asp-validation-for="SrednjeIme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pol" class="control-label"></label>
                <select asp-for="Pol" class="form-control">
                    <option value="@Pol.Muski">Muški</option>
                    <option value="@Pol.Zenski">Ženski</option>
                </select>
                <span asp-validation-for="Pol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Lista">Prikaži sve</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
